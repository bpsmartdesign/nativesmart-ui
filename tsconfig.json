{
  "compilerOptions": {
    "target": "es5", // Target ES5 for wider compatibility across environments
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs", // CommonJS for compatibility with Node.js and bundlers
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true, // Generate .d.ts files
    "declarationDir": "./dist", // Put declaration files in dist
    "outDir": "./dist", // Output JavaScript files to dist folder
    "jsx": "react-native", // Use React Native JSX syntax
    "types": ["nativewind/types"] // Include NativeWind types
  },
  "include": ["src/**/*"], // Include all files in src folder
  "exclude": ["node_modules"] // Exclude node_modules from being compiled
}
